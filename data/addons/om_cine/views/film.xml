<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="film_tree" model="ir.ui.view">
    <field name="name">om_cine.film.tree</field>
    <field name="model">om_cine.film</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="description" />
        <field name="synopsis" />
        <field name="fournisseurs" />
        <field name="duree" />
        <field name="sites" />
      </tree>
    </field>
  </record>

  <record id="film_form" model="ir.ui.view">
    <field name="name">om_cine.film.form</field>
    <field name="model">om_cine.film</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="fournisseurs" />
            <field name="duree" />
          </group>
          <group>
            <field name="description" />
            <field name="synopsis" />
          </group>
          <group>
            <field name="sites" />
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
