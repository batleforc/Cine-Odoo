<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="salle_tree" model="ir.ui.view">
        <field name="name">om_cine.salle.tree</field>
        <field name="model">om_cine.salle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="site" />
                <field name="place" />
                <field name="climatise" />
                <field name="troisd" />
            </tree>
        </field>
    </record>

    <record id="salle_form" model="ir.ui.view">
        <field name="name">om_cine.salle.form</field>
        <field name="model">om_cine.salle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="place" />
                        <field name="site" />
                    </group>
                    <group>
                        <field name="climatise" />
                        <field name="troisd" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
