<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="site_tree" model="ir.ui.view">
    <field name="name">om_cine.site.tree</field>
    <field name="model">om_cine.site</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="description" />
        <field name="address" />
        <field name="salles" />
        <field name="films" />
      </tree>
    </field>
  </record>

  <record id="site_form" model="ir.ui.view">
    <field name="name">om_cine.site.form</field>
    <field name="model">om_cine.site</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="name" />
          <field name="address" />
        </group>
        <group>
          <field name="description" />
          <field name="salles" />
        </group>
      </form>
    </field>
  </record>
</odoo>